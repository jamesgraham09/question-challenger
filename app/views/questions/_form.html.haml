= form_for @question do |f|
  - if @question.errors.any?
    #error_explanation
      %h2= "#{pluralize(@question.errors.count, "error")} prohibited this question from being saved:"
      %ul
        - @question.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :text
    = f.text_area :text
    %br
    = f.label :answer
    = f.text_field :answer
    %br
    optional (fill in if multiple choice, comma-seperated):
    %br
    = f.label 'wrong answers'
    = f.text_field :wrongs
  .actions
    = f.submit 'Save'
